{% extends "base.html.twig" %}

{% block title %}
	Contact
{% endblock %}

{% block body %}
	<div class="container">
		<div class=" text-center mt-5 ">

			<h1>Contact</h1>


		</div>


		<div class="row ">
			<div class="col-lg-7 mx-auto">
				<div class="card mt-2 mx-auto p-4 bg-light">
					<div class="card-body bg-light">

						<div class="container">
                        {{ form_start(form) }}

								<div class="controls">

									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												{{ form_row(form.firstName) }}
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
                                                {{ form_row(form.lastName) }}
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												{{ form_row(form.email) }}
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
                                                {{ form_row(form.subject) }}
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-12">
											<div class="form-group">
												{{ form_row(form.message) }}
											</div>

										</div>


										<div class="col-md-12">

											<input type="submit" class="btn btn-info btn-send col-12 mt-2 btn-block
												                            " value="Send Message">

										</div>

									</div>


								</div>
                                {{ form_end(form) }}
							</form>
						</div>
					</div>


				</div>
				<!-- /.8 -->

			</div>
			<!-- /.row-->

		</div>
	</div>

{% endblock %}
